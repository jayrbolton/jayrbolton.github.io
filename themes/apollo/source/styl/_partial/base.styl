html
  height: 100%

body
  padding: 0
  background: #f6f6f6
  margin: 0
  min-height: 100%
  color: #34495e
  font-size: 18px
  line-height: 1.6
  font-family: 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif

.stripey
  width: 400px
  height: 200%
  background: rgba(255,213,192,0.471)
  position: absolute
  top: 0
  right: 0
  transform: rotate(-30deg)
  transform-origin: left top
  z-index: 0

ion-icon
  min-width: 1.2rem

.wrapper
  padding: 1rem 2rem
  border-left: 2px solid rgba(66, 185, 131, 0.25)
  max-width: 48rem

ul.nav,
ul.post-list
  margin: 0
  padding: 0
  list-style-type: none

a, a:active
  color: #2c3e50
  text-decoration: none

a.nav-list-link.active,
  a.nav-list-link:hover,
  a.post-title-link:hover
  border-bottom: 2px solid #42b983

hr
  border: 0

code
  font-size: 18px
  margin: 0 2px
  color: black
  border-radius: 2px
  white-space: inherit

table
  width: 100%
thead
  background-color: #ddd
th
  padding: 5px


tbody tr:nth-child(2n)
  background-color: #eee

td
  padding: 5px

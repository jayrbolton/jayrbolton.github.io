html
  height: 100%

body
  padding: 3rem
  border-left: 2px solid rgba(66, 185, 131, 0.25)
  background: #f6f6f6
  margin: 0
  min-height: 100%
  color: #34495e
  font-size: 18px
  line-height: 1.6
  font-family: 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif


ul.nav,
ul.post-list
  margin: 0
  padding: 0
  list-style-type: none

a, a:active
  color: #2c3e50
  text-decoration: none

a.nav-list-link.active,
  a.nav-list-link:hover,
  a.post-title-link:hover
  border-bottom: 2px solid #42b983

hr
  border: 0

code
  font-size: 18px
  margin: 0 2px
  padding: 3px 5px
  color: black
  border-radius: 2px
  white-space: inherit

table
  width: 100%
thead
  background-color: #ddd
th
  padding: 5px


tbody tr:nth-child(2n)
  background-color: #eee

td
  padding: 5px

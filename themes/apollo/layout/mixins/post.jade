
mixin posts()
  ul.home.post-list
    - site.posts.sort('date', -1).each(function(item, index) {
      li.post-list-item
        article.post-block
          h2.post-title
            a.post-title-link(href= url_for(item.path))
              != item.title
          .post-content
            != item.summary
    - })

mixin post(item)
  .post
    article.post-block
      if item.title
        h1.post-title
          != item.title
      .post-content
        != item.content

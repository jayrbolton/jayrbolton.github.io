mixin home()
  - var prev = page.prev_link
  - var next = page.next_link
  .paginator
    if page.prev
      a.prev(href=url_for(prev)) <-
    else
      a.prev 
    if page.next
      a.next(href=url_for(next)) ->
    else
      a.prev 

mixin post()
  - var prev = page.prev ? page.prev.path : false;
  - var next = page.next ? page.next.path : false; 
  .paginator
    if prev
      a.prev(href=url_for(prev)) &larr;
    else
      a.prev 
    if next
      a.next(href=url_for(next)) &rarr;
    else
      a.prev 
